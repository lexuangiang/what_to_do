 <div class="container" id="login-dp">
  <div class="card card-container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-md-12">Login via
      <div class="social-buttons">
        <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
        <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
      </div>
      or
      <form class="form" role="form" method="post" action="login" accept-charset="UTF-8" id="login-nav">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email address</label>
            <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">Password</label>
          <%= f.input :password, required: false, class: "form-control" %>
          <div class="help-block text-right"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
        </div>
        <div class="form-group">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
        <div class="checkbox">
          <label>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </label>
        </div>
      </form>
    </div>
    <div class="bottom text-center">
      New here ?
      <b><%= link_to "Join Us", new_registration_path(resource_name) %></b>
    </div>
    <% end %>
  </div>
</div>
