<div class="container" id="login-dp">
  <div class="card card-container">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <form class="form" role="form" method="post" action="login" accept-charset="UTF-8" id="login-nav">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email address</label>
          <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">Password</label>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Confirmation Password</label>
          <%= f.input :password_confirmation, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      </form>
    </div>
    <div class="bottom text-center">
     Already have an account?
      <b><%= link_to "Log in", new_session_path(resource_name) %></b>
    </div>
    <% end %>
  </div>
</div>
